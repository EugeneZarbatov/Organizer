@model Organizer.Models.Contact

@{
    ViewBag.Title = "Редактирование контакта";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редактирование контакта</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Patronymic, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Patronymic, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Patronymic, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BirthDate, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                <div class="date-group">
                    <div class="input-group date" id="datetimepicker1">
                        @Html.EditorFor(model => model.BirthDate, new { htmlAttributes = new { @class = "form-control" } })
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                    @Html.ValidationMessageFor(model => model.BirthDate, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Organization, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Organization, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Organization, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Position, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Position, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Position, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3">Номер телефона</label>
            <div class="col-md-9">
                <div id="phoneParentId">
                    @if (Model.contactInformation.Count(c => c.PhoneNumber != null) <= 0)
                    {
                        <div class="plus-group">
                            <div class="input-group">
                                <input type="text" name="phone" class="form-control" />
                                <div class="input-group-btn">
                                    <button type="button" onclick="AddDiv('phone')" class="btn btn-default" aria-label="Left Align">
                                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        foreach (var item in Model.contactInformation)
                        {
                            if (item.PhoneNumber != null)
                            {
                                <div><p><input type="text" name="phone" class="form-control" value="@item.PhoneNumber" /></p></div>
                            }
                        }
                        <div class="plus-minus-group">
                            <div class="input-group">
                                <input type="text" name="phone" class="form-control" />
                                <div class="input-group-btn">
                                    <button type="button" onclick="AddDiv('phone')" class="btn btn-default" aria-label="Left Align">
                                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                                    </button>
                                    <button type="button" onclick="RemoveDiv('phone')" class="btn btn-default" aria-label="Left Align">
                                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3">Email</label>
            <div class="col-md-9">
                <div id="emailParentId">
                    @if (Model.contactInformation.Count(c => c.Email != null) <= 0)
                    {
                        <div class="plus-group">
                            <div class="input-group">
                                <input type="text" name="email" class="form-control" />
                                <div class="input-group-btn">
                                    <button type="button" onclick="AddDiv('email')" class="btn btn-default" aria-label="Left Align">
                                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        foreach (var item in Model.contactInformation)
                        {
                            if (item.Email != null)
                            {
                                <div><p><input type="text" name="email" class="form-control" value="@item.Email" /></p></div>
                            }
                        }
                        <div class="plus-minus-group">
                            <div class="input-group">
                                <input type="text" name="email" class="form-control" />
                                <div class="input-group-btn">
                                    <button type="button" onclick="AddDiv('email')" class="btn btn-default" aria-label="Left Align">
                                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                                    </button>
                                    <button type="button" onclick="RemoveDiv('email')" class="btn btn-default" aria-label="Left Align">
                                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3">Skype</label>
            <div class="col-md-9">
                <div id="skypeParentId">
                    @if (Model.contactInformation.Count(c => c.Skype != null) <= 0)
                    {
                        <div class="plus-group">
                            <div class="input-group">
                                <input type="text" name="skype" class="form-control" />
                                <div class="input-group-btn">
                                    <button type="button" onclick="AddDiv('skype')" class="btn btn-default" aria-label="Left Align">
                                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        foreach (var item in Model.contactInformation)
                        {
                            if (item.Skype != null)
                            {
                                <div><p><input type="text" name="skype" class="form-control" value="@item.Skype" /></p></div>
                            }
                        }
                        <div class="plus-minus-group">
                            <div class="input-group">
                                <input type="text" name="skype" class="form-control" />
                                <div class="input-group-btn">
                                    <button type="button" onclick="AddDiv('skype')" class="btn btn-default" aria-label="Left Align">
                                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                                    </button>
                                    <button type="button" onclick="RemoveDiv('skype')" class="btn btn-default" aria-label="Left Align">
                                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-3">Другая информация</label>
            <div class="col-md-9">
                <div id="otherParentId">
                    @if (Model.contactInformation.Count(c => c.OtherInfo != null) <= 0)
                    {
                        <div class="plus-group">
                            <div class="input-group">
                                <input type="text" name="other" class="form-control" />
                                <div class="input-group-btn">
                                    <button type="button" onclick="AddDiv('other')" class="btn btn-default" aria-label="Left Align">
                                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        foreach (var item in Model.contactInformation)
                        {
                            if (item.OtherInfo != null)
                            {
                                <div><p><input type="text" name="other" class="form-control" value="@item.OtherInfo" /></p></div>
                            }
                        }
                        <div class="plus-minus-group">
                            <div class="input-group">
                                <input type="text" name="other" class="form-control" />
                                <div class="input-group-btn">
                                    <button type="button" onclick="AddDiv('other')" class="btn btn-default" aria-label="Left Align">
                                        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                                    </button>
                                    <button type="button" onclick="RemoveDiv('other')" class="btn btn-default" aria-label="Left Align">
                                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
